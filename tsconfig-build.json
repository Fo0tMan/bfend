{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./publish",
    "baseUrl": "./",
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "files": [
    "./__gen_lib/public_api.ts"
  ],
  "exclude": [
    "zone.js"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "bfend.js",
    "flatModuleId": "bfend",
    "skipTemplateCodegen": true
  }
}
